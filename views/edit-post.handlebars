<article>
    <div class="container d-flex">
       
        <div class="col-2"></div>
        <div class="edit-post col-10">
            <h2>
                Edit Post
            </h2>
            <form class="edit-post-form">
                <div>
                    <input name="post-title" class="form-control col-8 border border-success rounded-0" type="text"
                        value="{{post.title}}" />

                </div>
                <div>

                    <a href="/post/{{post.id}}">{{post.comments.length}}
                        {{format_plural "comment" post.comments.length}}</a>
                </div>
                {{!-- <button type="submit">Save post</button> --}}
                <button type="submit" class="btn btn-success rounded-0" id="post-save">Save</button>
                {{!-- <button type="button" class="delete-post-btn">Delete post</button> --}}
                <button type="submit" class="btn btn-success rounded-0 delete-post-btn" id="post-title">Delete
                    Post</button>
            </form>
        </div>
    </div>
</article>
{{#if loggedIn}}
<form class="comment-form">
    <div>
        {{!-- <textarea name="comment-body"></textarea> --}}
        <textarea class="comment-body col-12"></textarea>
    </div>

    <div>
        
        <button type="submit" class="btn btn-success rounded-0" id="add-comment">Add Comment</button>

    </div>
</form>
{{/if}}
{{> comments post.comments}}
{{#if loggedIn}}
<script src="/javascript/comment.js"></script>

{{/if}}
<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
